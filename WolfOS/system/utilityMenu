local bMenuLoop = true
local tChoices = {}
local tActions = {}
local sUser = WDM.readSystemTemp("current_user")
while bMenuLoop == true do
	local tAll = WDM.list(WDM.getUtilitiesDir())
	for nItem = 1, #tAll do
		if string.sub(tAll[nItem], #tAll[nItem] - 4) == ".util" then
			local sName = WDM.deCamelCase(string.sub(tAll[nItem], 1, #tAll[nItem] - 5))
			table.insert(tChoices, sName)
		end
	end
	local sSelection = WUI.menu(tChoices, "Welcome '" .. sUser .. "'!", "Utility Menu", true)		
	if sSelection == "Return" then
		bMenuLoop = false
		os.run({}, WDM.getSystemDir() .. "mainMenu")
	else
		bMenuLoop = false
		local sName = WDM.camelCase(sSelection)
		os.run({}, WDM.getUtilitiesDir() .. sName .. ".util/" .. sName)
	end
end