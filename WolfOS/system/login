WUI.clear("Startup Menu")
WUI.slowPrint("Please enter your User Account ID:", 1, 4)
WUI.registerTextField(6, "[%w%.%-_]", 16, false)
WUI.slowPrint("Please enter your Passcode:", 1, 8)
WUI.registerTextField(10, "%w", 16, true)
local t = WUI.getText(true)
if t then
	local sUserInput, sPassInput = t[1], t[2]
	local bValidUser, sUID, sUserType = WAU.checkLogin(sUserInput, sPassInput)
	WUI.clear("Startup Menu")
	if bValidUser then
		WUI.slowPrint("Logging in...", nil, nil, true)
		WDM.writeSystemTemp(sUID, "current_uid")
		WDM.writeSystemTemp(sUserInput, "current_user")
		WDM.writeSystemTemp(WAU.encryptPasscode(sPassInput), "current_hash")
		WDM.writeSystemTemp(sUserType, "current_type")
		os.run({}, WDM.getSystemDir() .. "mainMenu")
	else
		WUI.slowPrint("Incorrect User Account ID or Passcode!", nil, nil, true)
		os.run({}, WDM.getSystemDir() .. "startupMenu")
	end
else
	os.run({}, WDM.getSystemDir() .. "startupMenu")
end